<div class="row">
  <h2 class="text-center"><strong>Register</strong></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="small-3 columns">
      <%= f.label :email, class: 'inline right' %>
      <%= f.label :password, class: 'inline right' %>
      <%= f.label :password_confirmation, class: 'inline right' %>
    </div>
    <div class="small-7 columns end">
      <%= f.email_field :email, autofocus: true, placeholder: 'Your email', required: true %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter password', required: true %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password', required: true %>
    </div>
    <div class="row">
      <hr>
    </div>
    <div class="row">
      <h5 class="subheader text-center"><i>Optional</i></h5>
      <div class="small-3 columns">
        <%= f.label :username, class: 'inline right' %>
        <%= f.label :first_name, class: 'inline right' %>
        <%= f.label :last_name, class: 'inline right' %>
      </div>
      <div class="small-7 columns end">
        <%= f.text_field :username, placeholder: 'Select a Username' %>
        <%= f.text_field :first_name, placeholder: 'Enter first name' %>
        <%= f.text_field :last_name, placeholder: 'Enter last name' %>
      </div>
    </div>
    <div class="row">
      <hr>
    </div>
    <div class="row">
      <div class="small-7 small-offset-3 columns end">
        <div class="row">
          <%= f.submit "Register", class: 'button success round expand' %><br>
        </div>
        <%= link_to 'Already a member?', user_session_path, class: 'right' %>
      </div>
    </div>
  <% end %>

</div>

<div class="row">
  <div class="small-9 columns small-offset-3">
  </div>
</div>
