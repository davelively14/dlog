<div class="row">
  <h2 class="text-center"><strong>Sign up</strong></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Your email' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter password' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password' %>
    <%= f.submit "Sign up", class: 'button success right round' %>
    
  <% end %>

</div>

<div class="row">
  <%= render "devise/shared/links" %>
</div>
