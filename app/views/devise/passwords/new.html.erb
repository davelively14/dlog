<h2 class="text-center"><strong>Forgot your password?</strong></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-3 columns">
      <%= f.label :email, class: 'inline right' %>
    </div>
    <div class="small-7 columns end">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="small-7 small-offset-3 columns end">
      <div class="row">
        <%= f.submit "Send me reset password instructions", class: 'button success round expand' %>
      </div>
      <%= link_to 'Sign in', new_user_session_path, class: 'right' %><br>
      <%= link_to 'Register', new_user_registration_path, class: 'right' %>
    </div>
  </div>
<% end %>
