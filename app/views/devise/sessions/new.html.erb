<div class="row">
  <h2 class="text-center"><strong>Login</strong></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="small-3 columns">
      <%= f.label :email, class: 'right inline' %>
      <%= f.label :password, class: 'right inline' %>
    </div>
    <div class="small-7 columns end">
      <%= f.email_field :email, autofocus: true, placeholder: 'Enter email' %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter password' %>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>
      <%= f.submit "Log in", class: 'button success round right' %>
    </div>


  <% end %>


</div>

<div class="row">
  <div class="small-9 columns small-offset-3">
    <%= render "devise/shared/links" %>
  </div>
</div>